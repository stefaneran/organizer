{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": "./",
		"strict": false,
		"esModuleInterop": true,
		"paths": {
			// Need to invoke as @core for imports to work in Jest
			"@core/*": [
				"src/core/*"
			],
			"app/*": [
				"src/app/*"
			],
			"activities/*": [
				"src/views/activities/*"
			],
			"contacts/*": [
				"src/views/contacts/*"
			],
			"inventory/*": [
				"src/views/inventory/*"
			],
			"recipes/*": [
				"src/views/recipes/*"
			]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}