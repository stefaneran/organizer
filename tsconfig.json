{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": "./",
		"strict": false,
		"esModuleInterop": true,
		"paths": {
			"app/*": ["src/app/*"],
			// Need to invoke as @core for imports to work in Jest
			"@core/*": ["src/core/*"],
			"activities/*": ["src/packages/activities/*"],
			"contacts/*": ["src/packages/contacts/*"],
			"inventory/*": ["src/packages/inventory/*"],
			"recipes/*": ["src/packages/recipes/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}