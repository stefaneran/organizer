{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": "./",
		"paths": {
			"@components/*": ["src/components/*"],
			"@schemas/*": ["src/schemas/*"],
			"@interfaces/*": ["src/interfaces/*"],
			"@logic/*": ["src/logic/*"],
      "@store/*": ["src/store/*"],
      "@utils/*": ["src/utils/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}