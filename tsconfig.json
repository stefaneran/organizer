{
	"compilerOptions": {
		"jsx": "react",
		"baseUrl": "./",
		"strict": false,
		"esModuleInterop": true,
		"paths": {
			"@app/*": ["src/app/*"],
			"@core/*": ["src/core/*"],
			"@activities/*": ["src/packages/activities/*"],
			"@contacts/*": ["src/packages/contacts/*"],
			"@inventory/*": ["src/packages/inventory/*"],
			"@recipes/*": ["src/packages/recipes/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}